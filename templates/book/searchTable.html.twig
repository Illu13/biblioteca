<turbo-stream action="replace" target="tabla-libros">
    <template>
        <div id="items_frame">
            <table id="searchBooks" class="table table-striped" style="width:100%">
                <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Author</th>
                    <th scope="col">Genre</th>
                    <th scope="col">ISBN</th>
                    <th scope="col">Publication Date</th>
                    <th scope="col">Pages</th>
                    <th scope="col">Publisher</th>
                    <th scope="col">Language</th>
                    <th scope="col">Status</th>
                </tr>
                </thead>
                <tbody>
                {% for book in books %}
                    <tr>
                        <td>{{ book.title }}</td>
                        <td>{{ book.author }}</td>
                        <td>{{ book.genre }}</td>
                        <td>{{ book.isbn }}</td>
                        <td>{{ book.publicationDate ? book.publicationDate|date('Y-m-d') : '' }}</td>
                        <td>{{ book.pages }}</td>
                        <td>{{ book.publisher }}</td>
                        <td>{{ book.language }}</td>
                        <td>{{ book.Status }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="9">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </template>
</turbo-stream>