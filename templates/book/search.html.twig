{% extends 'base.html.twig' %}

{% block title %}Book search{% endblock %}

{% block body %}
    <div class="container mt-4">
        <turbo-frame id="items_frame">
            <form method="get" action="{{ path('app_book_search') }}">
                <input type="text"
                       name="q"
                       placeholder="Buscar..."
                       data-controller="search"
                       data-action="input->search#submit"/>
            </form>

            {% include 'book/searchTable.html.twig' with { books: books } %}
        </turbo-frame>
    </div>
{% endblock %}
